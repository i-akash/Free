
# Copyright 2018

# Makefile example for the theme

# required tags (name + identical behavior)
# build => compiles the whole theme
# (WARNING! Important - DO NOT compile in run tags.
# run-p $ ID => runs the problem with the specified ID (1, 2, 3, 4)
# clean => deletes all generated files

# the rest is at the student's choice


CFLAGS = -Wall -std = c ++ 11

# required name (build)
build: build-p1 build-p2 build-p3 build-p4

build-p1:
g ++ $ (CFLAGS) src / p1.cpp -o p1

build-p2:
g ++ $ (CFLAGS) src / p2.cpp -o p2

build-p3:
g ++ $ (CFLAGS) src / p3.cpp -o p3

build-p4:
g ++ $ (CFLAGS) src / p4.cpp -o p4

run-p1: # required name
./p1

run-p2: # required name
./p2

run-p3: # required name
./p3

run-p4: # required name
./p4

clean: # required name
rm -f p1 p2 p3 p4